{
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4,
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "bracketSameLine": true,
    "importOrder": ["^@d-id/tests$", "^@d-id/(.*)$", "^@/(.*)$", "^[./]"],
    "importOrderSeparation": true,
    "importOrderParserPlugins": ["typescript", "decorators-legacy"],
    "plugins": ["prettier-plugin-organize-imports"],
    "overrides": [
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
